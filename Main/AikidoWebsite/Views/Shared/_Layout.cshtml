<!DOCTYPE html>
<html ng-app="aikidoApp">
<head>
    <meta charset="utf-8" />
    <title>Aikido Sursee - @ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-responsive.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-datetimepicker.min.css")" type="text/css" />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/Aktuelles/RSS" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="pragma" content="no-cache" />
</head>
<body>
    <div class="navbar" style="background: url(@Url.Content("~/Content/images/AikidoHeaderBackground.png")) no-repeat">
        <div class="navbar-inner">
            <img class="brand" src="@Url.Content("~/Content/images/AikidoHeader.png")" alt="Aikido Sursee" />

            @if (User.Identity.IsAuthenticated)
            {
                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class=" icon-user"></span>
                        @User.Identity.Name
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Passwort ändern", "ChangePassword", "Account")</li>
                        <li>@Html.ActionLink("Abmelden", "LogOff", "Account")</li>
                    </ul>
                </div>
            }

        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                <br />
                @Html.Partial("_Navigation")
            </div>
            <div class="span9">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.10/angular.min.js" integrity="sha384-ia9ODFCnpdVDcKobJOrZQ5bqTOTVKRvNuRSOmlBXUskfb4gjV2qEXLPz5J2YrjDK" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" integrity="sha384-sIzeKWIAHvT0Vm8QbfLCqZwBG0WMCkWVAOYd/330YSNeeQ1Y57N3T9lQz5Ry/EHH" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/de-ch.js" integrity="sha384-VPjzUe+BsDSz4ZHXNFbMLgp1tmG/eEYRLBUOe2z4Cp2FQimJsFF3dtcvf2zdsGnC" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/creole.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>
    <recaptcha-script jquery-validation="false" />
    <script type="text/javascript">
        moment.locale("de-CH");
    </script>
    @RenderSection("Footer", false)

    @Html.AntiForgeryToken()
</body>
</html>
